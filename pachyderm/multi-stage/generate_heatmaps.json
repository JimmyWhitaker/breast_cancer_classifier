{
    "pipeline": {
        "name": "generate_heatmaps"
    },
    "description": "Generates benign and malignant heatmaps for cropped images using patch classifier.",
    "input": {
        "cross": [
            {
              "pfs": {
                "repo": "crop",
                "glob": "/"
              }
            },
            {
              "pfs": {
                "repo": "models",
                "glob": "/"
              }
            },
            {
              "pfs": {
                "repo": "extract_centers",
                "glob": "/"
              }
            }
          ]
    },
    "standby": true,
    "transform": {
        "cmd": [
            "/bin/bash",
            "pachyderm/multi-stage/generate_heatmaps.sh"
        ],
        "image": "jimmywhitaker/breast_cancer_classifier:dev0.13"
    },
    "resource_limits": {
        "gpu": {
          "type": "nvidia.com/gpu",
          "number": 1
        }
    }
}